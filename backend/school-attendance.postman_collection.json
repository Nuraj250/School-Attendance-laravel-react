        {
          "name": "Create Attendance Session (today)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"class_name\": \"{{className}}\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/attendance/sessions",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "api",
                "attendance",
                "sessions"
              ]
            }
          },
          "response": [],
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Created or Conflict', function(){ pm.expect([201,409]).to.include(pm.response.code); });",
                  "if (pm.response.code === 201) {",
                  "  const data = pm.response.json();",
                  "  pm.environment.set('sessionId', data.id);",
                  "}",
                  "if (pm.response.code === 409) {",
                  "  console.warn('Session already exists for this class today. Use the existing sessionId.');",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ]
        },
        {
          "name": "Save Marks for Session",
          "request": {
            "method": "POST",
