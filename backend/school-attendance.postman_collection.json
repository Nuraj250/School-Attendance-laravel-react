              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Status is 200', function(){ pm.response.to.have.status(200); });",
                  "const arr = pm.response.json();",
                  "// set a studentId env var for convenience",
                  "if (Array.isArray(arr) && arr.length) { pm.environment.set('studentId', arr[0].id); }"
